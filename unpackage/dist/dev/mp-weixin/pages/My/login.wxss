.app-logo {
  width: 100%;
  height: 350rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.app-input {
  width: 630rpx;
  margin: 0 auto;
  height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1rpx solid #F2F2F2;
}
.app-input .place {
  color: #999;
  font-size: 30rpx;
  font-weight: 400;
}
.app-input input {
  width: 100%;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}
.default-btn {
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  margin-top: 130rpx;
}
.app-pact {
  width: 100%;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999999;
  font-weight: 400;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 36rpx;
}
.app-pact .active {
  color: #366FFF;
  font-size: 30rpx;
  margin-left: 10rpx;
  font-weight: bold;
}

