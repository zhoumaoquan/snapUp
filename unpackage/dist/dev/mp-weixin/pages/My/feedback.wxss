.container {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 30rpx;
}
.mg-top {
  margin-top: 30rpx;
}
.app-box-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 108rpx;
}
.app-box-item .title {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 30rpx;
}
.app-box-item .app-box-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.app-box-item .app-box-input input {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #333333;
}
.app-box-cont {
  width: 100%;
  color: #333333;
  font-size: 30rpx;
  min-height: 100rpx;
}
.placeholder {
  word-wrap: break-word;
}
.app-upload {
  margin-top: 70rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.app-upload-add {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 150rpx;
  height: 150rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  background-color: #FBFAF8;
  border: 2rpx dashed #D0D0D0;
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  flex-direction: column;
}
.app-upload-add .app-upload-icon {
  width: 46rpx;
  height: 38rpx;
}
.app-upload-add text {
  font-size: 22rpx;
  color: #999999;
  margin-top: 13rpx;
}
.app-upload .app-upload-box-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  margin-top: 20rpx;
}
.app-upload .app-upload-box-item .app-upload-close {
  position: absolute;
  right: -17rpx;
  top: -17rpx;
}
.app-upload .mg-right {
  margin-right: 20rpx;
}
.app-upload .mg-right:nth-of-type(4n+4) {
  margin-right: 0;
}
.default-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 96rpx;
  z-index: 99;
}

